<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="70dp"
    android:layout_marginBottom="1dp"
    android:background="@android:color/white"
    android:clickable="true"
    android:foreground="?attr/selectableItemBackground">
    <FrameLayout
        android:layout_width="72dp"
        android:layout_height="match_parent">
        <ImageView
            android:id="@+id/item_notice_icon"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:src="@drawable/ic_notice_new"/>
    </FrameLayout>
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:layout_marginBottom="1dp"
        android:paddingRight="16dp"
        android:orientation="vertical">
        <TextView
            android:id="@+id/item_notice_tvContent"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="bottom"
            android:textSize="16dp"
            android:textColor="@color/secondaryText"
            android:textStyle="bold"
            android:text="1월 입주자 대표 회의 안내"/>
        <TextView
            android:id="@+id/item_notice_tvDate"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="1dp"
            android:layout_weight="1"
            android:textSize="12dp"
            android:textColor="@color/warm_grey"
            android:text="등록일 : 2017.01.11"/>
    </LinearLayout>
    <FrameLayout
        android:layout_width="56dp"
        android:layout_height="match_parent">
        <Button
            android:id="@+id/item_notice_btnDetail"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="center_vertical"
            android:background="@drawable/drawable_button_content"
            android:textColor="@android:color/white"
            android:textStyle="bold"
            android:text="내용"/>
    </FrameLayout>
</LinearLayout>